// Funkcja odejmowania sinus贸w
double odejmijSinus(double a, double b) {
    double sinus1 = std::sin(a);
    double sinus2 = std::sin(b);
    return sinus1 - sinus2;
}

// Funkcja dodawania cosinus贸w
double dodajCosinus(double a, double b) {
    double cosinus1 = std::cos(a);
    double cosinus2 = std::cos(b);
    return cosinus1 + cosinus2;
}

// Funkcja odejmowania cosinus贸w
double odejmijCosinus(double a, double b) {
    double cosinus1 = std::cos(a);
    double cosinus2 = std::cos(b);
    return cosinus1 - cosinus2;
}
